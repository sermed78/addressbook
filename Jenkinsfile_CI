pipeline {

    agent{

            label 'master'

    }

    tools {



           maven 'localMaven' 

           jdk 'localJava'

    }



    stages{

        stage ('Code Validate'){

            steps {

                

                sh """

                echo "Perform Validate"

                mvn validate

                """



            }

        }

        stage ('Code Compilation'){

            steps {

                sh """

                echo "Perform Compilation"

                mvn compile

                """

            }

        }



        stage ('Code Test'){

            steps{

                sh """

                echo "To test the code"

                mvn test

                """

            }

        }

        stage ('Code Package') {

            steps{

                sh """

                echo "Create the package"

                mvn package

                """

            }

        }



        }

    

    }


