pipeline 
    agent{
            label 'master'
    }
    tools {

            maven 'localMaven'
            jdk 'localJava'

    }

    stages{

        stage ('Code Validate'){
            steps{

                sh """
                echo "Perform Validate"
                mvn validate
                """
            }        
        }
        stage ('Code Compilation'){
            steps{
                sh """
                echo "Perform Comllation"
                mvn compile
                """
            }
       }
       stage ('Code Test'){
           steps{
            sh """
            echo "To test the code"
            mvn test
            """   
           }
        }
        stage ('Code Package'){
           steps{
            sh """
            echo "To creat the package"
            mvn package
            """
       }
    }
        stage ('Code Verify'){
            steps{
            sh """
            echo "To verify the code"
            mvn verify
            """
    }
 }
}
}
